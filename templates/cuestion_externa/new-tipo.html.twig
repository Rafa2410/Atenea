{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
        <h3>{{ title }}</h3>
        {{ form_start(form) }}
            {{ form_widget(form) }}
        {{ form_end(form) }}

        {%for message in app.flashes('notice') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
{% endblock %}
