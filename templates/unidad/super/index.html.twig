{% extends 'base.html.twig' %}

{% block title %}Unidad de gestión{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>    
    {% if unidad %}
        <table id="unidad">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for uni in unidad %}
                <tr>
                    <td>{{ uni.nombre }}</td>
                    <td>{{ uni.descripcion }}</td>
                    <td>
                        <a href="{{ path('technical_super', {'id': uni.id}) }}" class="btn-floating light-blue lighten-1 hoverable"><i class="material-icons">visibility</i></a>
                        <a href="{{ path('mostrar_unidad', {'id': uni.id}) }}" class="btn-floating teal hoverable"><i class="material-icons">edit</i></a>
                    </td>
                </tr>
                {% endfor %}
                {% if empresas %}
                    {% for emp in empresas %}
                    <tr>
                        <td>{{ emp.nombre }}</td>
                        <td>{{ emp.descripcion }}</td>
                        <td>
                        <a href="{{ path('technical_super', {'id': emp.id}) }}" class="btn-floating light-blue lighten-1 hoverable"><i class="material-icons">visibility</i></a>
                        <a href="{{ path('mostrar_unidad', {'id': emp.id}) }}" class="btn-floating teal hoverable"><i class="material-icons">edit</i></a>
                    </td>
                    </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>
    {% else %}
        <p>No hay ninguna unidad de gestión para mostrar</p>
    {% endif %}
{% endblock %}