{% extends 'base.html.twig' %}

{% block title %}
    {% if interna == 0 %}
        Aspectos Internos
    {% else %}
        Aspectos Externos
    {% endif %}
{% endblock %}

{% block body %}
<style>
table {
  table-layout: fixed ;
  width: 100% ;
}
td {
  width: 25% ;
} 
</style>
  {# MENSAJES #}
    {% for message in app.flashes('creado') %}
        <div class="alert alert-success" data-info="{{ message }}">
            <script>
                M.toast({
                    html: '{{ message }}',
                    classes: 'green lighten-1'
                });
            </script>        
        </div>
    {% endfor %}
    {% for message in app.flashes('eliminado') %}
        <div class="alert alert-success" data-info="{{ message }}">
            <script>
                M.toast({
                    html: '{{ message }}',
                    classes: 'red darken-2'
                });
            </script>        
        </div>
    {% endfor %}
  {# FIN MENSAJES #}  
  {% set sem = false %}
    {% if interna == 0 %}
    <div class="card-panel center" style="margin-bottom:0;">
        <h3>Aspectos Externos</h3>
    </div>
    <div class="divider"></div>
    <div class="row">
        <ul class="tabs">          
          <li class="tab col s6"><a href="#oportunidades">Oportunidades</a></li>
          <li class="tab col s6"><a href="#amenazas">Amenazas</a></li>          
        </ul>
    </div>
    <div class="section col s12" id="oportunidades">        
        <a href="{{ path('aspecto_new',{'aspec': 'opor'}) }}" class="btn-floating pulse btn-large light-blue lighten-1 right"><i class="material-icons">add</i></a>        
        {% for aspecto in aspectos %}
                {% if aspecto.favorable == 1 and aspecto.interno == interna %}
                    {% for cuestion in aspecto.cuestiones %}                        
                        {% for cues in cuestionesResult %}
                            {% if cues.id == cuestion.id %}
                                {% set sem = true %}
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                {% endif %}
        {% endfor%}
        {% if sem %}
        <table>
            <thead>
                <tr>
                <th>Oportunidad</th>
                <th>Cuestiones</th>
                <th>Acción</th>
                </tr>
            </thead>            
            <tbody>            
            {% for aspecto in aspectos %}
                {% if aspecto.favorable == 1 and aspecto.interno == interna %}
                    {% for cuestion in aspecto.cuestiones %}
                        {% for cues in cuestionesResult %}
                            {% if cues.id == cuestion.id %}
                                <tr>
                                    <td>{{ aspecto.descripcion }}</td>
                                    <td>
                                        {% if aspecto.cuestiones|length > 1 %}
                                        {% set cont = 0 %}
                                        {% for cuestion in aspecto.cuestiones %}
                                        {% set cont = cont + 1 %}
                                            {% if cont != aspecto.cuestiones|length %}
                                                {{ cuestion.descripcion }},
                                            {% else %}
                                                {{ cuestion.descripcion }}
                                            {% endif %}
                                        {% endfor %}
                                        {% else %}                                                    
                                            {{ aspecto.cuestiones[0].descripcion }}                                        
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('aspecto_edit', {'id': aspecto.id, 'aspec': 'opor'}) }}" class="btn-floating"><i class="material-icons">edit</i></a>                        
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                    {% endfor %}                        
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
        {% else %}
            <span>No hay ningun aspecto favorable</span>
        {% endif %}        
    </div>
    <div class="section col s12" id="amenazas">
        {% set sem = false %}
